{
    "name": "sideloader",
    "description": "A tool to manage Apple developer certificates for personal devs account, and hence allowing the development of iOS applications on Linux.",
    "authors": [
        "Dadoum"
    ],

    "targetPath": "bin/",

    "sourcePaths-linux": [
        "linux/common/"
    ],

    "dependencies": {
        "botan": {
            "repository": "git+https://github.com/Dadoum/botan.git",
            "version": "a0c206639debc7e5726c02fc399267e6a33571a0"
        },
        "plist-d": {
            "repository": "git+https://github.com/Dadoum/libplist-d.git",
            "version": "6a67af9f2b6064065508bbb63eed1fab470ea3be"
        },
        "provision": {
            "repository": "git+https://github.com/Dadoum/Provision.git",
            "version": "f4a3f768932debd79610e361dcb0877e3a8ff798"
        },
        "requests": "~>2.0.9",
        "slf4d": "~>2.1.1"
    },

    "subConfigurations": {
        "provision": "libplist"
    },

    "configurations": [
        {
            "name": "linux-gtk",
            "platforms": ["linux"],
            "targetType": "executable",

            "sourcePaths": [
                "linux/gtk/"
            ],

            "dependencies": {
                "gtk_d:gtk": "~>1.0.3",
                "gtk_d:adw": "~>1.0.3"
            }
        },
        {
            "name": "linux-gtk-static",
            "platforms": ["linux"],
            "targetType": "executable",

            "sourcePaths": [
                "linux/gtk/"
            ],

            "dependencies": {
                "gtk_d:gtk": "~>1.0.3",
                "gtk_d:adw": "~>1.0.3"
            },

            "dflags-ldc": [
                "--link-defaultlib-shared=false"
            ],

            "dflags-gdc": [
                "-defaultlib=:libgphobos.a"
            ]
        },
        {
            "name": "linux-dlangui",
            "platforms": ["linux"],
            "targetType": "executable",

            "sourcePaths": [
                "linux/dlangui/"
            ],

            "dependencies": {
                "dlangui": "~>0.10.4",
                "gtk_d:glib": "~>1.0.3",
                "gtk_d:gio": "~>1.0.3"
            }
        }
    ]
}